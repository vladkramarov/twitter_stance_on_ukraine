container_commands:
  01_make_packages_dir:
    command: "mkdir -p /opt/python/app/current/packages"

  02_copy_packages:
    command: "rsync -av --exclude='*.pyc' --exclude='__pycache__' src/dash_app/ /opt/python/app/current/packages/ && rsync -av --exclude='*.pyc' --exclude='__pycache__' src/database_manager.py /opt/python/app/current/packages/"

  03_install_packages:
    command: "pip install -r /opt/python/app/current/packages/requirements.txt"