container_commands:
  01_make_packages_dir:
    command: "mkdir /opt/python/current/app/packages"

  02_copy_packages:
    command: "cp -R . /opt/python/current/app/packages/ --exclude='*.pyc' --exclude='__pycache__'"

  03_install_packages:
    command: "pip install -r /opt/python/current/app/packages/requirements.txt"